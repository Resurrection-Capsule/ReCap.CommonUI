<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type RadioButton}"
                TargetType="{x:Type RadioButton}">
        <Setter Property="Padding" Value="2,0,0,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="MinHeight" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid x:Name="RootGrid"
                    ColumnDefinitions="20,*">
                    <Border x:Name="Border"
                            Grid.ColumnSpan="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}" />

                    <Border x:Name="Box"
                            Background="{DynamicResource CheckBox.Background.Idle}"
                            BorderBrush="{DynamicResource CheckBox.BorderBrush.Idle}"
                            BorderThickness="1"
                            CornerRadius="15"
                            Width="15"
                            Height="15"
                            BoxShadow="{DynamicResource CheckBox.OuterBoxShadow.Idle}">
                        <Border x:Name="GlyphStroke"
                                BorderBrush="{DynamicResource RadioButton.GlyphStroke}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Width="10"
                                Height="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsVisible="{TemplateBinding IsChecked}">
                            <Ellipse x:Name="GlyphFill"
                                    Fill="{DynamicResource RadioButton.GlyphFill}"
                                    OpacityMask="{DynamicResource RadioButton.GlyphFill.Mask}" />
                        </Border>
                    </Border>

                    <ContentPresenter x:Name="PART_ContentPresenter"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Content="{TemplateBinding Content}"
                                    Margin="{TemplateBinding Padding}"
                                    RecognizesAccessKey="True"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    TextWrapping="Wrap"
                                    Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>


        <Style Selector="^:pointerover:not(:pressed)">
            <Style Selector="^ /template/ Border#Box">
                <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.BorderBrush.Hover}" />
                <Setter Property="BoxShadow" Value="{DynamicResource CheckBox.OuterBoxShadow.Hover}" />
            </Style>
        </Style>


        <Style Selector="^:pressed">
            <Style Selector="^ /template/ Border#Box">
                <Setter Property="Background" Value="{DynamicResource CheckBox.Background.Pressed}" />
            </Style>
        </Style>


        <Style Selector="^:disabled">
            <Style Selector="^ /template/ Border#Box,
                            ^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Opacity" Value="0.5" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>