<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type CheckBox}"
                TargetType="{x:Type CheckBox}">
        <Setter Property="Padding" Value="2,0,0,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="MinHeight" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid x:Name="RootGrid"
                    ColumnDefinitions="20,*">
                    <Border x:Name="Border"
                            Grid.ColumnSpan="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}" />

                    <Border x:Name="Box"
                            Background="{DynamicResource CheckBox.Background.Idle}"
                            BorderBrush="{DynamicResource CheckBox.BorderBrush.Idle}"
                            BorderThickness="1"
                            CornerRadius="1"
                            Width="15"
                            Height="15"
                            BoxShadow="{DynamicResource CheckBox.OuterBoxShadow.Idle}">
                        <Panel>
                            <Path x:Name="GlyphGlow"
                                Classes="glyph"
                                Stroke="{Binding $self.Fill, Mode=OneWay}"
                                StrokeThickness="1" />
                            <Path x:Name="Glyph"
                                Classes="glyph" />
                        </Panel>
                    </Border>

                    <ContentPresenter x:Name="PART_ContentPresenter"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Content="{TemplateBinding Content}"
                                    Margin="{TemplateBinding Padding}"
                                    RecognizesAccessKey="True"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    TextWrapping="Wrap"
                                    Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>


        <Style Selector="^ /template/ Path.glyph">
            <Setter Property="Width" Value="9" />
            <Setter Property="Height" Value="9" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Stretch" Value="None" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
            <Setter Property="Fill" Value="{DynamicResource CheckBox.GlyphFill.Idle}" />
            <Setter Property="IsVisible" Value="False" />
        </Style>


        <Style Selector="^:checked /template/ Path.glyph">
            <Setter Property="Data" Value="{DynamicResource CheckMarkPathData}" />
        </Style>
        <Style Selector="^:indeterminate /template/ Path.glyph">
            <Setter Property="Data" Value="{DynamicResource IndeterminateMarkPathData}" />
        </Style>
        <Style Selector="^:checked, ^:indeterminate">
            <Style Selector="^ /template/ Path.glyph">
                <Setter Property="IsVisible" Value="True" />
            </Style>
            <Style Selector="^ /template/ Path#GlyphGlow">
                <Setter Property="Effect" Value="{DynamicResource CheckBox.Glyph.GlowEffect}" />
            </Style>
        </Style>


        <Style Selector="^:pointerover:not(:pressed)">
            <Style Selector="^ /template/ Border#Box">
                <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.BorderBrush.Hover}" />
                <Setter Property="BoxShadow" Value="{DynamicResource CheckBox.OuterBoxShadow.Hover}" />
            </Style>
        </Style>


        <Style Selector="^:pressed">
            <Style Selector="^ /template/ Border#Box">
                <Setter Property="Background" Value="{DynamicResource CheckBox.Background.Pressed}" />
            </Style>
        </Style>


        <Style Selector="^:disabled">
            <Style Selector="^ /template/ Border#Box,
                            ^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Opacity" Value="0.5" />
            </Style>
            <Style Selector="^ /template/ Path#GlyphGlow">
                <Setter Property="IsVisible" Value="False" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>
