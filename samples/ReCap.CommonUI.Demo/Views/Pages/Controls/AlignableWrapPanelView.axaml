<UserControl x:Class="ReCap.CommonUI.Demo.Views.Pages.Controls.AlignableWrapPanelView"
            xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:rcui="https://github.com/Resurrection-Capsule/ReCap.CommonUI">
	<UserControl.Styles>
		<Style Selector="rcui|AlignableWrapPanel > Rectangle">
			<Setter Property="Height" Value="50" />
			<Setter Property="Margin" Value="1" />
			<Setter Property="Stroke" Value="#FF404040" />
			<Setter Property="StrokeThickness" Value="1" />
		</Style>
	</UserControl.Styles>

	<StackPanel Orientation="Vertical"
				Spacing="4">
		<HeaderedContentControl Header="Options">
			<StackPanel Orientation="Vertical">
				<TextBlock Text="Horizontal content alignment"
						Classes="h4" />
				<StackPanel Classes="leftButtons">
					<ToggleButton Content="Left"
								IsChecked="{Binding CurrentAlignment, Converter={x:Static rcui:EnumToBoolConverter.Instance}, ConverterParameter={x:Static HorizontalAlignment.Left}, Mode=TwoWay}" />
					<ToggleButton Content="Center"
								IsChecked="{Binding CurrentAlignment, Converter={x:Static rcui:EnumToBoolConverter.Instance}, ConverterParameter={x:Static HorizontalAlignment.Center}, Mode=TwoWay}" />
					<ToggleButton Content="Right"
								IsChecked="{Binding CurrentAlignment, Converter={x:Static rcui:EnumToBoolConverter.Instance}, ConverterParameter={x:Static HorizontalAlignment.Right}, Mode=TwoWay}" />
				</StackPanel>
			</StackPanel>
		</HeaderedContentControl>
		<rcui:AlignableWrapPanel x:Name="Panel"
								HorizontalContentAlignment="{Binding CurrentAlignment, Mode=OneWay}">
		</rcui:AlignableWrapPanel>
	</StackPanel>
</UserControl>