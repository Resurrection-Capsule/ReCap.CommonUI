<UserControl x:Class="ReCap.CommonUI.Demo.Views.Pages.Controls.CloseableView"
            xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:rctr="using:ReCap.CommonUI.Controls">
	<UserControl.Styles>
		<Style Selector="rctr|Closeable">
			<Setter Property="IsCloseButtonVisible" Value="{Binding ShowCloseButton}" />
		</Style>
	</UserControl.Styles>
	
	<Panel>
		<DockPanel VerticalAlignment="Top">
			<Grid Grid.ColumnDefinitions="*,Auto"
				Grid.RowDefinitions="Auto,Auto,Auto">
				<Grid.Styles>
					<Style Selector="TextBlock">
						<Setter Property="Grid.Column" Value="0" />
						<Setter Property="TextWrapping" Value="Wrap" />
					</Style>
					<Style Selector="Button">
						<Setter Property="Grid.Column" Value="2" />
						<Setter Property="VerticalAlignment" Value="Top" />
					</Style>
				</Grid.Styles>
				<Control Classes="untouchable"
						Grid.Column="1"
						Grid.Row="1"
						Width="4"
						Height="8" />

				<TextBlock Text="Show a Closeable with direct content"
						Grid.Row="0" />
				<Button Content="Show"
						Grid.Row="0"
						Command="{Binding ShowCloseableWithDirectContentCommand, Mode=OneWay}">
					<Button.CommandParameter>
						<StackPanel Orientation="Vertical"
									Spacing="4">
							<TextBlock Text="Sample text" />
							<TextBlock Text="Light sample text"
									Foreground="White" />
							<TextBlock Text="Dark sample text"
									Foreground="Black" />
						</StackPanel>
					</Button.CommandParameter>
				</Button>

				<TextBlock Text="Show with ContentTemplate-d content"
						Grid.Row="2" />
				<Button Content="Show"
						Grid.Row="2"
						Command="{Binding ShowCloseableWithContentTemplateObjectCommand, Mode=OneWay}"
						CommandParameter="X" />
			</Grid>

			<HeaderedContentControl Header="Options">
				<StackPanel Orientation="Vertical"
							Spacing="4">
					<CheckBox Content="Show Close button"
							IsChecked="{Binding ShowCloseButton, Mode=TwoWay}" />
				</StackPanel>
			</HeaderedContentControl>
		</DockPanel>


		<rctr:Closeable IsOpen="{Binding IsCTemplatedCloseableOpen, Mode=TwoWay}"
						Content="{Binding CTemplatedCloseableContent, Mode=OneWay}">
			<rctr:Closeable.ContentTemplate>
				<DataTemplate>
					<TextBlock FontFamily="Ubuntu Mono"
							Foreground="#FFFF00FF"
							FontSize="32"
							Text="{Binding}" />
				</DataTemplate>
			</rctr:Closeable.ContentTemplate>
		</rctr:Closeable>
		<rctr:Closeable IsOpen="{Binding IsDContentCloseableOpen, Mode=TwoWay}"
						Content="{Binding DContentCloseableContent, Mode=OneWay}" />
	</Panel>
</UserControl>