<UserControl x:Class="ReCap.CommonUI.Demo.Views.Pages.AngledBordersView"
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:rcdec="using:ReCap.CommonUI.Controls.Decorators">
	<UserControl.Styles>
		<Style Selector="UniformGrid > :is(rcdec|AngledBorderBase)">
			<Setter Property="Margin" Value="20" />
		</Style>
		
		<Style Selector=":is(rcdec|AngledBorderBase)">
			<Setter Property="StrokeThickness" Value="1" />
			<Setter Property="InnerGlowSize" Value="1" />


			<!--
			<Setter Property="Background" Value="#C0000000" />
			<Setter Property="BorderBrush" Value="#40FFFFFF" />
			<Setter Property="InnerGlowColor" Value="#20FFFFFF" />
			-->
			<Setter Property="Background" Value="#FF0000FF" />
			<Setter Property="BorderBrush" Value="#FF00FF00" />
			<Setter Property="InnerGlowColor" Value="#FFFF0000" />
		</Style>

		<Style Selector="rcdec|AngledBorderEx.tl">
			<Setter Property="TopLeftCut" Value="6" />
		</Style>

		<Style Selector="rcdec|AngledBorderEx.tr">
			<Setter Property="TopRightCut" Value="6" />
		</Style>

		<Style Selector="rcdec|AngledBorderEx.br">
			<Setter Property="BottomRightCut" Value="6" />
		</Style>

		<Style Selector="rcdec|AngledBorderEx.bl">
			<Setter Property="BottomLeftCut" Value="6" />
		</Style>
		
		<Style Selector="rcdec|AngledBorderEx.li">
			<Setter Property="TopLeftInset" Value="18" />
			<Setter Property="BottomLeftInset" Value="18" />
		</Style>

		<Style Selector="rcdec|AngledBorderEx.ri">
			<Setter Property="TopRightInset" Value="18" />
			<Setter Property="BottomRightInset" Value="18" />
		</Style>
	</UserControl.Styles>
	<UniformGrid Columns="4">
		<rcdec:AngledBorderEx Classes="tl tr br bl li ri"
						InvertSide="Top" />
		<rcdec:AngledBorderEx Classes="tl tr br bl li ri"
						InvertSide="Bottom" />
		<rcdec:AngledBorderEx Classes="tl tr br bl ri"
						InvertSide="Left" />
		<rcdec:AngledBorderEx Classes="tl tr br bl li"
						InvertSide="Right" />
		
		<rcdec:AngledBorderEx Classes="tl tr br bl"
						InvertSide="Top" />
		<rcdec:AngledBorderEx Classes="tl tr br bl"
						InvertSide="Bottom" />
		<rcdec:AngledBorderEx Classes="tl tr br bl"
						InvertSide="Left" />
		<rcdec:AngledBorderEx Classes="tl tr br bl"
						InvertSide="Right" />
		
		<rcdec:AngledBorderEx Classes="tl br" />
		<rcdec:AngledBorderEx Classes="tl tr" />
		<rcdec:AngledBorderEx Classes="bl br" />
		<rcdec:AngledBorderEx Classes="bl tr" />
	</UniformGrid>
</UserControl>