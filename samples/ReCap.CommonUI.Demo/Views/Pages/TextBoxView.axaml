<UserControl x:Class="ReCap.CommonUI.Demo.Views.Pages.TextBoxView"
            xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:rctr="using:ReCap.CommonUI">
	<UserControl.Styles>
		<Style Selector="HeaderedContentControl > StackPanel,
						HeaderedContentControl > StackPanel > StackPanel">
			<Setter Property="Orientation" Value="Vertical" />
			<Setter Property="Spacing" Value="20" />
		</Style>
	</UserControl.Styles>
	<ScrollViewer HorizontalScrollBarVisibility="Disabled">
		<UniformGrid Columns="2">
			<HeaderedContentControl Header="Normal">
				<StackPanel>
					<TextBox Watermark="Normal TextBox Watermark" />
					<TextBox Watermark="Disabled TextBox Watermark"
							IsEnabled="False" />
					<TextBox Text="Normal TextBox Text" />
					<TextBox Text="ReadOnly TextBox Text"
							IsReadOnly="True" />
					<TextBox Text="Disabled TextBox Text"
							IsEnabled="False" />
					<TextBox Text="Disabled ReadOnly TextBox Text"
							IsReadOnly="True"
							IsEnabled="False" />
					<TextBox Watermark="TextBox with Clear button"
							Text="TextBox Text to clear"
							Classes="clearButton" />
				</StackPanel>
			</HeaderedContentControl>


			<HeaderedContentControl Header="Floating Watermark">
				<HeaderedContentControl.Styles>
					<Style Selector="TextBox">
						<Setter Property="UseFloatingWatermark" Value="True" />
					</Style>
					<Style Selector="TextBox[IsEnabled=True]">
						<Setter Property="Watermark" Value="Floating TextBox Watermark" />
					</Style>
					<Style Selector="TextBox[IsEnabled=False]">
						<Setter Property="Watermark" Value="Disabled Floating TextBox Watermark" />
					</Style>
				</HeaderedContentControl.Styles>
				<StackPanel>
					<TextBox />
					<TextBox IsEnabled="False" />
					<StackPanel>
						<StackPanel.Styles>
							<Style Selector="TextBox">
								<Setter Property="Text" Value="Sample text" />
							</Style>
						</StackPanel.Styles>
						<TextBox />
						<TextBox IsEnabled="False" />
					</StackPanel>
					<TextBox Watermark="TextBox with Clear button"
							Text="TextBox Text to clear"
							Classes="clearButton" />
				</StackPanel>
			</HeaderedContentControl>


			<HeaderedContentControl Header="Password-input">
				<HeaderedContentControl.Styles>
					<Style Selector="TextBox">
						<Setter Property="Watermark" Value="Type stuff here..." />
						<Setter Property="TextInputOptions.ContentType" Value="Password" />
						<Setter Property="PasswordChar" Value="*" />
					</Style>
				</HeaderedContentControl.Styles>
				<StackPanel>
					<TextBox />
					<TextBox Watermark="Type stuff here... (alternate PasswordChar)"
							PasswordChar="•" />
					<TextBox Watermark="TextBox with 'Reveal Password' button"
							Classes="revealPasswordButton" />
				</StackPanel>
			</HeaderedContentControl>


			<HeaderedContentControl Header="Password-input + Floating Watermark">
				<HeaderedContentControl.Styles>
					<Style Selector="TextBox">
						<Setter Property="UseFloatingWatermark" Value="True" />
						<Setter Property="Watermark" Value="Type stuff here..." />
						<Setter Property="TextInputOptions.ContentType" Value="Password" />
						<Setter Property="PasswordChar" Value="*" />
					</Style>
				</HeaderedContentControl.Styles>
				<StackPanel>
					<TextBox />
					<TextBox Watermark="Type stuff here... (alternate PasswordChar)"
							PasswordChar="•" />
					<TextBox Watermark="TextBox with 'Reveal Password' button"
							Classes="revealPasswordButton" />
				</StackPanel>
			</HeaderedContentControl>
		</UniformGrid>
	</ScrollViewer>
</UserControl>